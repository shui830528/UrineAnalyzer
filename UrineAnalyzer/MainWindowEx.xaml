                        <Button Name="button_Set" FontSize="18" FontWeight="Bold" Style="{StaticResource ButtonStyle_UnSelectedModule}" HorizontalAlignment="Right" Margin="5,0,0,0" Click="module_Click">
                            <Button.Content>
                                <StackPanel Orientation="Vertical">
                                    <Image  Source="Image/set.png" Height="40"/>
                                    <TextBlock Text="设置" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Name="button_Log" FontSize="18" FontWeight="Bold" Style="{StaticResource ButtonStyle_UnSelectedModule}" HorizontalAlignment="Right" Margin="5,0,0,0"  Tag="LogSettingPage.xaml" Click="module_Click">
                            <Button.Content>
                                <StackPanel Orientation="Vertical">
                                    <Image Source="Image/Log1.png" Height="40"/>
                                    <TextBlock Text="日志" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Name="button_User" FontSize="18" FontWeight="Bold" Style="{StaticResource ButtonStyle_UnSelectedModule}" HorizontalAlignment="Right" Margin="5,0,0,0" Click="module_Click">
                            <Button.Content>
                                <StackPanel Orientation="Vertical">
                                    <Image Source="Image/userman.png" Height="40"/>
                                    <TextBlock Text="用户" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="2">
                        <Button Name="button_Quit" Style="{StaticResource ButtonStyle_Exited}" HorizontalAlignment="Right" Margin="5,5,5,0" ToolTip="退出系统" Click="button_Quit_Click"/>
                        <Button Name="button_ChangeUser" Style="{StaticResource ButtonStyle_User}" HorizontalAlignment="Right" Margin="5,5,5,0" ToolTip="切换用户" Click="button_ChangeUser_Click"/>
                        <Button Name="button_Help" Style="{StaticResource ButtonStyle_Help}" HorizontalAlignment="Right" Margin="5,5,15,0" ToolTip="系统帮助" Click="button_Help_Click"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3">
                        <Image  Margin="5,0,0,0"/>
                        <Label Content="版本：" Margin="10,0,0,5" VerticalAlignment="Bottom" Foreground="White" FontWeight="Bold"/>
                        <Label x:Name="label_Version" Content="" Margin="0,0,0,5" VerticalAlignment="Bottom" Foreground="White" FontWeight="Bold"/>
                        <Label Content="用户名称：" Margin="10,0,0,5" VerticalAlignment="Bottom" Foreground="White" FontWeight="Bold"/>
                        <Label x:Name="label_UserName" Content="" Margin="0,0,0,5" VerticalAlignment="Bottom" Foreground="White"/>
                    </StackPanel>
                    <!--<Label x:Name="label_Status" Grid.ColumnSpan="3" Content="{Binding RunState}" Foreground="White" Margin="5,0,0,0"/>-->
                    <Label Grid.Column="3" Visibility="Hidden" Content="拍照：" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                    <Label x:Name="label_Video" Grid.Column="4" Visibility="Hidden" Content="未开启摄像机" VerticalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                    <Label Content="|" Grid.Column="3" Background="AliceBlue" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="1"/>
                    <Label Grid.Column="5" Content="串口：" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                    <Label x:Name="label_Com" Grid.Column="6" Content="{Binding RunState}" VerticalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                    <Label Content="|" Grid.Column="5" Background="AliceBlue" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="1"/>
                    <Label x:Name="label_DateTime" Content="{Binding DateTimeString}" VerticalAlignment="Center"  Grid.Column="7" HorizontalAlignment="Right" Foreground="White" Margin="0,0,5,0" FontWeight="Bold"/>
                    <Label Content="|" Grid.Column="7" Background="AliceBlue" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="1"/>
                </Grid>
                <Grid Grid.Row="2" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Frame x:Name="frame_LoadPage" Grid.ColumnSpan="3" Margin="5,5,0,0" NavigationUIVisibility="Hidden"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
    
</Window>
