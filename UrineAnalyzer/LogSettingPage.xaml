<Page x:Class="UrineAnalyzer.LogSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:UrineAnalyzer"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="LogSettingPage" FontSize="16" Loaded="Page_Loaded">
    <Page.Resources>
        <Style x:Key="ToolButton" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="BorderBrush" Value="#FF79B7F5"/>
                    <Setter Property="Background" Value="#FFCCE4FD"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid Background="White" Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderThickness="1" BorderBrush="LightGray">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="日期" VerticalAlignment="Center" Margin="5,0,10,0"/>
                <DatePicker Name="datePicker_Date"  SelectedDate="{x:Static sys:DateTime.Now}" VerticalAlignment="Center" Width="150" Margin="5,0,10,0"/>
                <TextBlock Text="操作员" VerticalAlignment="Center" Margin="15,0,10,0"/>
                <ComboBox Name="comboBox_User" VerticalAlignment="Center" Width="150" Margin="5,0,10,0"/>
                <Image Source="Assets/shuxian.png" />
                <Border Width="80" Name="btn_Query" Style="{StaticResource ToolButton}" Margin="2,2,2,2" MouseLeftButtonUp="btn_Query_MouseLeftButtonUp">
                    <StackPanel VerticalAlignment="Center">
                        <Image Source="Assets/t11.png" Width="24" Height="24"/>
                        <TextBlock Text="查询" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </Border>
        <Border Grid.Row="1">
            <DataGrid Name="dataGrid_Log" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="序号" Binding="{Binding No}" Width="80" IsReadOnly="True"/>
                    <DataGridTextColumn Header="日期" Binding="{Binding DateTime}" Width="150" IsReadOnly="True"/>
                    <DataGridTextColumn Header="内容" Binding="{Binding Content}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="操作员" Binding="{Binding User}" Width="150" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
