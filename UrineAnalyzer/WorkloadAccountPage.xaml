<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UrineAnalyzer"
      xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" x:Class="UrineAnalyzer.WorkloadAccountPage"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="WorkloadAccountPage" FontSize="16" Loaded="Page_Loaded">
    <Page.Resources>
        <Style x:Key="ToolButton" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="BorderBrush" Value="#FF79B7F5"/>
                    <Setter Property="Background" Value="#FFCCE4FD"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid Background="White" Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border BorderThickness="1" BorderBrush="LightGray">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="日期范围" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <DatePicker Name="dpStart" VerticalAlignment="Center" Width="150" Margin="5,0,0,0" SelectedDateChanged="dpStart_SelectedDateChanged"/>
                <TextBlock Text=" - " VerticalAlignment="Center"/>
                <DatePicker Name="dpEnd" VerticalAlignment="Center" Width="150" Margin="5,0,20,0" SelectedDateChanged="dpEnd_SelectedDateChanged"/>



                <Border Name="btnStatistics" Width="80" Style="{StaticResource ToolButton}" Margin="2,2,2,2" MouseLeftButtonUp="btnStatistics_MouseLeftButtonUp">
                    <StackPanel VerticalAlignment="Center">
                        <Image Source="Assets/t30.png" Width="24" Height="24"/>
                        <TextBlock Text="开始统计" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Width="80" Style="{StaticResource ToolButton}" Margin="2,2,2,2" Visibility="Hidden" MouseLeftButtonUp="Border_MouseLeftButtonUp">
                    <StackPanel VerticalAlignment="Center">
                        <Image Source="Assets/t10.png" Width="24" Height="24"/>
                        <TextBlock Text="打印" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border Margin="2,2,2,2">
                    <DataGrid Name="dgWorkload" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" HorizontalGridLinesBrush="Gray" VerticalGridLinesBrush="Gray">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="统计项目" Binding="{Binding TypeCaption}" Width="150"/>
                            <DataGridTextColumn Header="项目名称" Binding="{Binding ItemName}" Width="150"/>
                            <DataGridTextColumn Header="样本数量" Binding="{Binding Count}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
                <Border Grid.Column="1" Margin="2,2,2,2">

                  
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                        <dxc:ChartControl Name="ChartSendCheckOffice" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <dxc:ChartControl.Titles>
                                <dxc:Title Content="送检科室" HorizontalAlignment="Center"/>
                            </dxc:ChartControl.Titles>
                            <dxc:ChartControl.Legend>
                                <dxc:Legend/>
                            </dxc:ChartControl.Legend>
                            <dxc:XYDiagram2D >
                                <dxc:BarSideBySideSeries2D Name="Series2DOffice" BarWidth="0.1" ShowInLegend="False" ColorEach="True">
                                    <dxc:SeriesPoint Argument="检验科" Value="12"/>
                                    <dxc:SeriesPoint Argument="化验科" Value="10"/>
                                    <dxc:SeriesPoint Argument="儿科" Value="12"/>
                                </dxc:BarSideBySideSeries2D>
                            </dxc:XYDiagram2D>
                        </dxc:ChartControl>
                        <dxc:ChartControl Name="ChartSendCheckDoctor" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <dxc:ChartControl.Titles>
                                <dxc:Title Content="送检医师" HorizontalAlignment="Center"/>
                            </dxc:ChartControl.Titles>
                            <dxc:ChartControl.Legend>
                                <dxc:Legend/>
                            </dxc:ChartControl.Legend>
                            <dxc:XYDiagram2D>
                                <dxc:BarSideBySideSeries2D Name="Series2DCheckPersion" ShowInLegend="False" BarWidth="0.1" ColorEach="True">
                                    <dxc:SeriesPoint Argument="张三" Value="20"/>
                                    <dxc:SeriesPoint Argument="李四" Value="30"/>
                                    <dxc:SeriesPoint Argument="王五" Value="10"/>
                                </dxc:BarSideBySideSeries2D>
                            </dxc:XYDiagram2D>
                        </dxc:ChartControl>
                        <dxc:ChartControl Name="ChartSendCheckPersion" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <dxc:ChartControl.Titles>
                                <dxc:Title Content="检验人" HorizontalAlignment="Center"/>
                            </dxc:ChartControl.Titles>
                            <dxc:ChartControl.Legend>
                                <dxc:Legend/>
                            </dxc:ChartControl.Legend>
                            <dxc:XYDiagram2D>
                                <dxc:BarSideBySideSeries2D Name="Series2DPerson" ShowInLegend="False" ColorEach="True" BarWidth="0.1">
                                    <dxc:SeriesPoint Argument="管理员" Value="50"/>
                                    <dxc:SeriesPoint Argument="操作员" Value="30"/>
                                    <dxc:SeriesPoint Argument="检验人" Value="100"/>
                                </dxc:BarSideBySideSeries2D>
                            </dxc:XYDiagram2D>
                        </dxc:ChartControl>
                    </Grid>

                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
