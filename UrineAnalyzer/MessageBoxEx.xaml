<local:ModernWindow x:Class="UrineAnalyzer.MessageBoxEx"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UrineAnalyzer"
        Style="{StaticResource MetroWindowStyle}"
        mc:Ignorable="d"
        Title="提示" Height="260" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2">
            <Image x:Name="image_icon" VerticalAlignment="Center" Height="48" Width="48" HorizontalAlignment="Right" Margin="20,0,0,0"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="2,10,0,10">
                <TextBlock x:Name="textBlock_Info" Width="300"  VerticalAlignment="Center" TextWrapping="Wrap"/>
            </ScrollViewer>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center">
            <Button x:Name="button_1" Content="button1" Style="{StaticResource DialogButton}" Height="40" Width="80" Margin="0,0,10,10" Click="button_1_Click" />
            <Button x:Name="button_3"  Content="button3" Style="{StaticResource DialogButton}" Height="40" Width="80" Margin="0,0,10,10" Click="button_3_Click" />
            <Button x:Name="button_2"  Content="button2" Style="{StaticResource DialogButton}" Height="40" Width="80" Margin="0,0,0,10" Click="button_2_Click" />
            <!--<Button x:Name="button_1" Content="button1" Height="40" Width="80" Margin="0,0,10,10" Click="button_1_Click" Style="{StaticResource ButtonStyle}"/>
            <Button x:Name="button_3"  Content="button3" Height="40" Width="80" Margin="0,0,10,10" Click="button_3_Click" Style="{StaticResource ButtonStyle}"/>
            <Button x:Name="button_2"  Content="button2" Height="40" Width="80" Margin="0,0,0,10" Click="button_2_Click" Style="{StaticResource ButtonStyle}"/>-->
        </StackPanel>
    </Grid>
</local:ModernWindow>
