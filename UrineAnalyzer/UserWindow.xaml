<local:ModernWindow x:Class="UrineAnalyzer.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UrineAnalyzer"
        mc:Ignorable="d"
        Style="{StaticResource MetroWindowStyle}"
        Title="用户" Height="250" Width="400" FontSize="16" UseLayoutRounding="True" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="label" Content="用户：" HorizontalAlignment="Left" Margin="52,37,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_User" HorizontalAlignment="Left" Height="32" Margin="115,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="210"/>
        <Label x:Name="label_Copy" Content="密码：" HorizontalAlignment="Left" Margin="52,82,0,0" VerticalAlignment="Top"/>
        <!--<Label x:Name="label_Copy1" Content="角色：" HorizontalAlignment="Left" Margin="52,132,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.765,2.645"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="115,132,0,0" VerticalAlignment="Top" Width="210" Height="31"/>-->
        <Button x:Name="button_Ok" Content="确定" Style="{StaticResource DialogButton}" HorizontalAlignment="Left" Margin="104,146,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="button_Ok_Click"/>
        <Button x:Name="button_Cancel" Content="取消" Style="{StaticResource DialogButton}" HorizontalAlignment="Left" Margin="225,146,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="button_Cancel_Click"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="115,82,0,0" VerticalAlignment="Top" PasswordChar="*" Width="210" Height="31"/>

    </Grid>
</local:ModernWindow>
