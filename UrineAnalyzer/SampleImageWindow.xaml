<local:ModernWindow x:Class="UrineAnalyzer.SampleImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Style="{StaticResource MetroWindowStyle}"
        xmlns:local="clr-namespace:UrineAnalyzer"
        mc:Ignorable="d"
        Title="试纸条图像" Height="260" Width="819" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Loaded="Window_Loaded" FontSize="16">
    <Canvas>
        <Border Canvas.Left="83" Canvas.Top="59" Height="90" Width="700" BorderBrush="Gray" BorderThickness="1">
            <ScrollViewer Height="90" Width="700" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                <Image x:Name="image"  Height="60"/>
            </ScrollViewer>
        </Border>
        <Label x:Name="label" Content="样本号" Canvas.Left="20" Canvas.Top="18"/>
        <TextBlock x:Name="textBlock_SampleID" Canvas.Left="83" TextWrapping="Wrap" Text="" Canvas.Top="23" Width="129" Height="31"/>
        <Label x:Name="label_Copy" Content="图片" Canvas.Left="36" Canvas.Top="49"/>
        <Button x:Name="button_Close" Content="关闭" Style="{StaticResource DialogButton}" Canvas.Left="382" Canvas.Top="166" Width="75" Height="30" Click="button_Close_Click"/>
        <CheckBox x:Name="checkBox" Content="自动缩放" Canvas.Left="702" Canvas.Top="28" Click="checkBox_Click" IsChecked="True"/>
    </Canvas>
</local:ModernWindow>
