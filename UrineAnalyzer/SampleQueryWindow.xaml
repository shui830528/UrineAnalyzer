<Window x:Class="UrineAnalyzer.SampleQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UrineAnalyzer"
        mc:Ignorable="d"
        Title="样本查询" FontSize="16" Height="650" Width="700" UseLayoutRounding="True" AllowsTransparency="True" 
        WindowStyle="None" Background="Transparent" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" >
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Button.Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="grid">
                            <Border x:Name="rb" BorderBrush="#FF6E859C" BorderThickness="2" Background="#3F3F3F"  Opacity="0.9" CornerRadius="5"/>
                            <ContentPresenter HorizontalAlignment="Center" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center" Margin="5"/>

                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="True"/>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="black" TargetName="rb"/>
                            </Trigger>
                            <Trigger Property="Button.IsFocused" Value="True">
                                <Setter Property="Background" Value="black" TargetName="rb" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="lightgray" TargetName="rb"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Border CornerRadius="10" Background="#FF9E9E9D"  Opacity="0.4"/>
        <Border Background="White" Padding="5" Opacity="1" Margin="5" CornerRadius="10">
            <Border >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition/>

                    </Grid.RowDefinitions>
                    <Border Background="#FF4D6781" CornerRadius="10,10,0,0" MouseMove="Border_MouseMove" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="样本查询" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" />
                            <Button Command="{Binding CancelCommand}" Grid.Column="1" Style="{StaticResource ButtonStyle}" Margin="5" Click="Button_Click">
                                <Button.Content>
                                    <Image Source ="Assets/Close.png"/>
                                </Button.Content>
                            </Button>
                        </Grid>

                    </Border>
                    <Border Grid.Row="1" CornerRadius="0,0,10,10" Background="#FFFBFBFB" Padding="5">
                        <Grid>
                            <Border Background="White" Opacity="0.5" CornerRadius="10"/>
                            <Border CornerRadius="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="50"/>
                                    </Grid.RowDefinitions>
                                    <Canvas>
                                        <GroupBox Header="按条件查询" Height="280" Width="645" Canvas.Left="10" Canvas.Top="10">
                                            <Canvas Margin="0">
                                                <TextBlock Text="样本编号" VerticalAlignment="Center" Canvas.Left="10" Canvas.Top="10" Width="64"/>
                                                <TextBox x:Name="tbSampleID" Text="" Width="169" VerticalAlignment="Center" Canvas.Top="10" Canvas.Left="79" MaxLength="8" TabIndex="1"/>
                                                <TextBlock Text="条码ID号" VerticalAlignment="Center" Canvas.Left="10" Canvas.Top="51" Width="69"/>
                                                <TextBox x:Name="tbBarCode" Text="" VerticalAlignment="Center" Canvas.Left="79" Canvas.Top="51" Width="172" TabIndex="3" MaxLength="20"/>
                                                <TextBlock Text="患者姓名" VerticalAlignment="Center" Canvas.Left="10" Canvas.Top="96" Width="69"/>
                                                <TextBox x:Name="tbName" Text="" VerticalAlignment="Center" Canvas.Left="79" Canvas.Top="92" Width="172" TabIndex="5"/>
                                                <TextBlock Text="患者年龄" VerticalAlignment="Center" Canvas.Left="10" Canvas.Top="134" Width="69"/>
                                                <TextBox x:Name="tbAge" Text="" Width="50" VerticalAlignment="Center" Canvas.Top="134" Canvas.Left="144" PreviewTextInput="tbAge_PreviewTextInput" TabIndex="8"/>
                                                <ComboBox x:Name="cbAgeUnit" Text="{Binding AgeUnit}" Width="52" VerticalAlignment="Center" IsEditable="True" Canvas.Left="199" Canvas.Top="134" TabIndex="9"/>
                                                <TextBlock Text="患者性别" VerticalAlignment="Center" Canvas.Left="10" Canvas.Top="178" Width="69"/>
                                                <ComboBox x:Name="cbSex" Text="{Binding Sex}" VerticalAlignment="Center" IsEditable="True" Canvas.Left="79" Canvas.Top="175" Width="172" TabIndex="11"/>
                                                <TextBlock Text="病历号" VerticalAlignment="Center" Canvas.Left="10" Canvas.Top="217" Width="69"/>
                                                <TextBox x:Name="tbCaseNo" Text="" VerticalAlignment="Center" Canvas.Left="79" Canvas.Top="217" Width="172" TabIndex="13" MaxLength="10"/>
                                                <TextBlock Text="床号" VerticalAlignment="Center" Canvas.Left="350" Canvas.Top="10" Width="69"/>
                                                <TextBox x:Name="tbBedNo" Text="" VerticalAlignment="Center" Canvas.Left="424" Canvas.Top="10" Width="172" TabIndex="2" MaxLength="4"/>
                                                <TextBlock Text="患者类别" VerticalAlignment="Center" Canvas.Left="350" Canvas.Top="51" Width="69"/>
                                                <ComboBox x:Name="cbPatientType" Text="{Binding PatientType}" VerticalAlignment="Center" IsEditable="True" Canvas.Left="424" Canvas.Top="51" Width="172" TabIndex="4"/>
                                                <TextBlock Text="送检科室" VerticalAlignment="Center" Canvas.Left="350" Canvas.Top="96" Width="69"/>
                                                <ComboBox x:Name="cbSendCheckOffice" Text="{Binding SendCheckOffice}" VerticalAlignment="Center" IsEditable="True" Canvas.Left="424" Canvas.Top="92" Width="172" TabIndex="6"/>
                                                <TextBlock Text="送检医生" VerticalAlignment="Center" Canvas.Left="350" Canvas.Top="134" Width="69"/>
                                                <ComboBox x:Name="cbSendCheckDoctor" Text="{Binding SendCheckDoctor}" VerticalAlignment="Center" IsEditable="True" Canvas.Left="424" Canvas.Top="134" Width="172" TabIndex="10"/>
                                                <TextBlock Text="检验人" VerticalAlignment="Center" Canvas.Left="350" Canvas.Top="178" Width="69"/>
                                                <TextBox x:Name="tbCheckDoctor" Text="" VerticalAlignment="Center" Canvas.Left="424" Canvas.Top="175" Width="172" TabIndex="12" MaxLength="10"/>
                                                <TextBlock Text="审核人" VerticalAlignment="Center" Canvas.Left="350" Canvas.Top="221" Width="69"/>
                                                <TextBox x:Name="tbAuditor" Text="" VerticalAlignment="Center" IsEnabled="True" Canvas.Left="424" Canvas.Top="217" Width="172" TabIndex="14" MaxLength="10"/>
                                                <ComboBox x:Name="cbAgeOperate" Text="" Width="60" VerticalAlignment="Center" IsEditable="True" Canvas.Left="79" Canvas.Top="134" TabIndex="7"/>
                                                <!--<TextBlock Text="开始样本号" VerticalAlignment="Center" Canvas.Left="10" Canvas.Top="25"/>
                    <TextBlock Text="结束样本号" VerticalAlignment="Center" Canvas.Left="277" Canvas.Top="25"/>
                    <TextBox x:Name="textBox_BeginNo" HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="129" Canvas.Left="104" Canvas.Top="22" PreviewTextInput="textBox_BeginNo_PreviewTextInput"/>
                    <TextBox x:Name="textBox_EndNo"  HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="129" Canvas.Left="375" Canvas.Top="22" PreviewTextInput="textBox_EndNo_PreviewTextInput"/>-->

                                            </Canvas>
                                        </GroupBox>
                                        <GroupBox Header="按日期查询" Height="103" Width="645" Canvas.Left="10" Canvas.Top="393">
                                            <Canvas>
                                                <TextBlock Text="开始日期" Canvas.Left="14" Canvas.Top="23"/>
                                                <TextBlock Text="结束日期" Canvas.Left="275" Canvas.Top="24"/>
                                                <DatePicker Name="datePicker_BeginDate" Width="150" Canvas.Left="97" Canvas.Top="20" TabIndex="20"/>
                                                <DatePicker Name="datePicker_EndDate" Width="150" Canvas.Left="357" Canvas.Top="20" TabIndex="21"/>
                                            </Canvas>
                                        </GroupBox>
                                        <GroupBox x:Name="groupBox" Header="检索范围" Height="98" Canvas.Left="10" Canvas.Top="290" Width="645">
                                            <Canvas>
                                                <RadioButton x:Name="rb_unTest" Content="未检验样本" VerticalContentAlignment="Center" Canvas.Left="9" Canvas.Top="23" TabIndex="15"/>
                                                <RadioButton x:Name="rb_Test" Content="已检验样本" VerticalContentAlignment="Center" Canvas.Left="129" Canvas.Top="23" TabIndex="16"/>
                                                <RadioButton x:Name="rb_Auditor" Content="已审核样本" VerticalContentAlignment="Center" Canvas.Left="243" Canvas.Top="23" TabIndex="17"/>
                                                <RadioButton x:Name="rb_Import" Content="已导入样本" VerticalContentAlignment="Center" Canvas.Left="357" Canvas.Top="23" TabIndex="18"/>
                                                <RadioButton x:Name="rb_All" Content="全部样本" VerticalContentAlignment="Center" Canvas.Left="471" Canvas.Top="23" IsChecked="True" TabIndex="19"/>
                                            </Canvas>
                                        </GroupBox>
                                    </Canvas>
                                    <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="0">
                                        <Canvas>
                                            <Button Name="btnQuery" Content="确定" Style="{StaticResource DialogButton}" Width="100" Height="30" Canvas.Left="426" Canvas.Top="8" IsDefault="True" Click="btnQuery_Click" TabIndex="22"/>
                                            <Button Name="btnCancel" Content="取消" Style="{StaticResource DialogButton}" Width="100" Height="30" Canvas.Left="550" Canvas.Top="8" IsCancel="True" Click="btnCancel_Click"/>
                                        </Canvas>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                </Grid>

            </Border>
        </Border>
    </Grid>
</Window>
