<Window x:Class="UrineAnalyzer.LoginPage" Name="Login_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UrineAnalyzer" 
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:Attached="clr-namespace:ViewModel;assembly=ViewModel" 
        xmlns:Interaction="http://schemas.microsoft.com/expression/2010/interactions"
        Attached:DialogCloser.DialogResult="{Binding DialogResult}"
        mc:Ignorable="d" FontSize="16"
        Title="LoginUI" Height="300" Width="400" BorderThickness="0.5" AllowsTransparency="True" 
        WindowStyle="None" Background="Transparent" ShowInTaskbar="True" ResizeMode="NoResize"  
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Icon="/Assets/app.ico"  >
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Button.Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="grid">
                            <Border x:Name="rb" BorderBrush="#FF6E859C" BorderThickness="2" Background="#3F3F3F"  Opacity="0.9" CornerRadius="5"/>
                            <ContentPresenter HorizontalAlignment="Center" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center" Margin="5"/>

                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="True"/>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="black" TargetName="rb"/>
                            </Trigger>
                            <Trigger Property="Button.IsFocused" Value="True">
                                <Setter Property="Background" Value="black" TargetName="rb" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="lightgray" TargetName="rb"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="10" Background="#FF9E9E9D"  Opacity="0.4"/>
        <Border Background="#FF4D6781" Padding="5" Opacity="1" Margin="5" CornerRadius="10">
            <Border >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition/>

                    </Grid.RowDefinitions>
                    <Border Background="#FF4D6781" CornerRadius="10,10,0,0" MouseMove="Login_Window_MouseMove">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="登录窗体" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" />
                            <Button Command="{Binding CancelCommand}" Grid.Column="1" Style="{StaticResource ButtonStyle}" Margin="5" Click="Button_Click">
                                <Button.Content>
                                    <Image Source ="Assets/Close.png"/>
                                </Button.Content>
                            </Button>
                        </Grid>
   
                    </Border>
                    <Border Grid.Row="1" CornerRadius="0,0,10,10" Background="#FFFBFBFB" Padding="5">
                        <Grid>
                            <Border Background="White" Opacity="0.5" CornerRadius="10"/>
                            <Border CornerRadius="10">
                                <Grid Background="#FF4D6781">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="229*"/>
                                        <ColumnDefinition Width="190*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="63*"/>
                                        <RowDefinition Height="10*"/>
                                        <RowDefinition Height="41*"/>
                                        <RowDefinition Height="45*"/>
                                        <RowDefinition Height="107*"/>
                                    </Grid.RowDefinitions>
                                    <Image HorizontalAlignment="Left" Margin="10,3,0,3" VerticalAlignment="Stretch" Width="50" />
                                    <Label Content="" Foreground="AliceBlue" HorizontalAlignment="Left" VerticalContentAlignment="Center" FontSize="18" Margin="65,3,0,3" Width="150" VerticalAlignment="Stretch"/>
                                    <Label Content="-" Background="AliceBlue" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Top" Height="1" Grid.ColumnSpan="2"/>
                                    <Label Content="用户名" FontSize="18" Foreground="AliceBlue" HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Center"  
               Height="30"  Margin="0,10,11,6"   />
                                    <Label Content="密码" FontSize="18" Foreground="AliceBlue" HorizontalAlignment="Right" Grid.Row="3" VerticalAlignment="Center"  
               Height="30"  Margin="0,11,11,10" />
                                    <TextBox x:Name="cbbUserName" Background="White" Text="" Grid.Column="1" 
                  HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center"  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" 
                  Height="30" Width="120" Margin="0,10,0,6" FontSize="16" InputLanguageManager.InputLanguage="en-US"/>
                                    <PasswordBox x:Name="txtUserPWD" Password="" Grid.Column="1" HorizontalAlignment="Left"  Grid.Row="3" 
                     VerticalAlignment="Center" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" 
                     Height="30" Width="120" Margin="0,12,0,9" FontSize="16"/>
                                    <Button x:Name="btnLogin" Style="{StaticResource ButtonStyle}" Content="登录" Foreground="White" FontSize="18" HorizontalAlignment="Right" Margin="0,19,3,0" Grid.Row="4" VerticalAlignment="Top" 
                Width="106" Height="40" Click="btnLogin_Click" IsDefault="True" />
                                    <Button x:Name="btnExit" Style="{StaticResource ButtonStyle}" Content="退出" Foreground="White" FontSize="18" Grid.Column="1" HorizontalAlignment="Left" Margin="3,18,0,0" Grid.Row="4" VerticalAlignment="Top" 
                Width="106" Height="40"  Click="btnExit_Click" />
                                    <Image HorizontalAlignment="Left" Grid.RowSpan="5" VerticalAlignment="Stretch" Width="100" Margin="10,48,0,66" Source="/Assets/Login.png"/>
                                    <!--<Label x:Name="label" Content="Copyright ©2017-2020 河北艾驰生物科技有限公司 版权所有 V1.00.02" FontSize="12" Foreground="AliceBlue" 
               HorizontalAlignment="Left" Margin="10,79,0,0" Grid.Row="4" VerticalAlignment="Top" Grid.ColumnSpan="2"  />-->
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
    
                </Grid>

            </Border>
        </Border>
    </Grid>
</Window>
