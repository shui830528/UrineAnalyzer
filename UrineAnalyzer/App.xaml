<Application x:Class="UrineAnalyzer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UrineAnalyzer"
             StartupUri="MainWindowEx.xaml" DispatcherUnhandledException="Application_DispatcherUnhandledException">
    <Application.Resources>
        <Style x:Key="LabelStyle" TargetType="{x:Type Label}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Label}">
                        <Grid x:Name="grid" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="130" Background="White">
                            <Rectangle x:Name="rectangle" Opacity="0.9" HorizontalAlignment="Stretch" Height="Auto" Margin="0,0,3,1" Stroke="Black" StrokeThickness="0" VerticalAlignment="Stretch" Width="Auto" RadiusX="5" RadiusY="5">
                                <Rectangle.Effect>
                                    <BlurEffect Radius="8"/>
                                </Rectangle.Effect>
                                <Rectangle.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="Black"/>
                                        <GradientStop Color="#FF134493" Offset="1"/>
                                    </RadialGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Rectangle Opacity="0.9" HorizontalAlignment="Stretch" Height="Auto" Margin="5,5,8,6" Stroke="Black" StrokeThickness="0" VerticalAlignment="Stretch" Width="Auto" RadiusX="5" RadiusY="5" Fill="White">
                                <Rectangle.Effect>
                                    <BlurEffect Radius="0"/>
                                </Rectangle.Effect>
                            </Rectangle>
                            <ContentPresenter RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Fill" TargetName="rectangle">
                                    <Setter.Value>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="#0072E3" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Fill" TargetName="rectangle">
                                    <Setter.Value>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="#c0c0c0" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Fill" TargetName="rectangle">
                                    <Setter.Value>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="Gray" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--窗体上功能按钮样式 中等长度-->
        <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="grid" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="80">
                            <Rectangle x:Name="rectangle" HorizontalAlignment="Stretch" Height="Auto" Margin="0,0,3,1" Stroke="Black" StrokeThickness="0" VerticalAlignment="Stretch" Width="Auto" RadiusX="5" RadiusY="5">
                                <Rectangle.Effect>
                                    <BlurEffect Radius="8"/>
                                </Rectangle.Effect>
                                <Rectangle.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="Black"/>
                                        <GradientStop Color="#FF134493" Offset="1"/>
                                    </RadialGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Rectangle HorizontalAlignment="Stretch" Height="Auto" Margin="5,5,8,6" Stroke="Black" StrokeThickness="0" VerticalAlignment="Stretch" Width="Auto" RadiusX="5" RadiusY="5" Fill="White">
                                <Rectangle.Effect>
                                    <BlurEffect Radius="0"/>
                                </Rectangle.Effect>
                            </Rectangle>
                            <ContentPresenter RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Fill" TargetName="rectangle">
                                    <Setter.Value>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="#0072E3" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="False">
                                <Setter Property="Fill" TargetName="rectangle">
                                    <Setter.Value>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="#c0c0c0" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsDefaulted" Value="True"/>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Fill" TargetName="rectangle">
                                    <Setter.Value>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="#0072E3" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True"/>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Fill" TargetName="rectangle">
                                    <Setter.Value>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="Gray" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--窗体上功能按钮样式 最大长度-->
        <Style x:Key="ButtonStyleMax" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="grid" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="100">
                            <Rectangle x:Name="rectangle" HorizontalAlignment="Stretch" Height="Auto" Margin="0,0,3,1" Stroke="Black" StrokeThickness="0" VerticalAlignment="Stretch" Width="Auto" RadiusX="5" RadiusY="5">
                                <Rectangle.Effect>
                                    <BlurEffect Radius="8"/>
                                </Rectangle.Effect>
                                <Rectangle.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="Black"/>
                                        <GradientStop Color="#FF134493" Offset="1"/>
                                    </RadialGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Rectangle HorizontalAlignment="Stretch" Height="Auto" Margin="5,5,8,6" Stroke="Black" StrokeThickness="0" VerticalAlignment="Stretch" Width="Auto" RadiusX="5" RadiusY="5" Fill="White">
                                <Rectangle.Effect>
                                    <BlurEffect Radius="0"/>
                                </Rectangle.Effect>
                            </Rectangle>
                            <ContentPresenter RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Fill" TargetName="rectangle">
                                    <Setter.Value>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="#0072E3" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="False">
                                <Setter Property="Fill" TargetName="rectangle">
                                    <Setter.Value>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="#c0c0c0" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsDefaulted" Value="True"/>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Fill" TargetName="rectangle">
                                    <Setter.Value>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="#0072E3" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True"/>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Fill" TargetName="rectangle">
                                    <Setter.Value>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="Gray" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--最小化按钮样式-->
        <Style x:Key="WinMinBtnStyle" TargetType="Button">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="MainBorder" Background="Transparent">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="Background" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--最大化按钮样式-->
        <Style x:Key="WinMaxBtnStyle" TargetType="Button">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="MainBorder" Background="Transparent">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="Background" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--关闭按钮样式-->
        <Style x:Key="WinCloseBtnStyle" TargetType="Button">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="MainBorder" Background="Transparent">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="Background" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--窗体控件模板-->
        <ControlTemplate x:Key="MetroWindowTemplate" TargetType="{x:Type Window}">
            <Grid>
                <Border CornerRadius="10" Background="#FF9E9E9D"  Opacity="0.4"/>
                <Border Background="#FF4D6781" Padding="5" Opacity="1" Margin="5" CornerRadius="10">
                    <Border BorderBrush="#FF4D6781" BorderThickness="1" Background="White">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Background="#FF4D6781">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="WindowTitleTbl" Grid.Column="0" Text="{TemplateBinding Title}" FontFamily="Microsoft YaHei" VerticalAlignment="Center" 
                                       FontSize="16" FontWeight="Bold" Margin="10,0" Foreground="White"/>

                                <!--<Button x:Name="MinWinButton" Grid.Column="2" Style="{StaticResource WinMinBtnStyle}" Margin="2,0,2,5"
                                        VerticalContentAlignment="Bottom" 
                                        HorizontalContentAlignment="Center">
                            <Button.Content>
                                <StackPanel>
                                    <Path Stroke="White" StrokeThickness="2" Data="M2,2 L16,2"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>-->
                                <Button x:Name="MaxWinButton" Grid.Column="3" Style="{StaticResource WinMaxBtnStyle}" Margin="4"
                                        VerticalContentAlignment="Center" 
                                        HorizontalContentAlignment="Center">
                                    <Button.Content>
                                        <StackPanel>
                                            <Path Stroke="White" StrokeThickness="2" Data="M2,2 L16,2 L16,16 L2,16 L2,2"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Button x:Name="CloseWinButton" Grid.Column="4" Style="{StaticResource WinCloseBtnStyle}" Margin="4" 
                                        HorizontalContentAlignment="Center" 
                                        VerticalContentAlignment="Center">
                                    <Button.Content>
                                        <StackPanel>
                                            <Path Stroke="White" StrokeThickness="2" Data="M2,2 L16,16 M2,16 L16,2"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                            </Grid>

                            <AdornerDecorator Grid.Row="1">
                                <ContentPresenter/>
                            </AdornerDecorator>
                        </Grid>
 
                    </Border>
                </Border>
            </Grid>
        </ControlTemplate>

        <Style x:Key="MetroWindowStyle" TargetType="{x:Type Window}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="AllowsTransparency" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="WindowStyle" Value="None"/>
            <Setter Property="Template" Value="{StaticResource MetroWindowTemplate}"/>
        </Style>

        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border01" BorderThickness="1" Background="#FFD4E3F3" BorderBrush="#FF79B7F5" Padding="2">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" Value="#FF79B7F5" TargetName="border01"/>
                                <Setter Property="Background" Value="#FFCCE4FD" TargetName="border01"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>


    </Application.Resources>
</Application>
